<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>SHN | THE UNIVERSE</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;700&family=Space+Mono:wght@400;700&family=Syncopate:wght@700&display=swap" rel="stylesheet">
    <style>
        :root {
            --bg: #030303;
            --card-bg: #0a0a0a;
            --shn-pink: #ff007f;
            --secondary: #222;
        }

        * { margin: 0; padding: 0; box-sizing: border-box; -webkit-tap-highlight-color: transparent; }
        body { 
            background-color: var(--bg); 
            color: #fff; 
            font-family: 'Inter', sans-serif; 
            overflow-x: hidden;
            min-height: 100vh;
        }

        /* --- TAKİP EDEN PEMBE IŞIK --- */
        #dynamic-glow {
            position: fixed;
            top: 0; left: 50%;
            transform: translate(-50%, -50%);
            width: 700px; height: 700px;
            background: radial-gradient(circle, rgba(255, 0, 127, 0.25) 0%, transparent 70%);
            pointer-events: none;
            z-index: 1;
            transition: top 0.4s cubic-bezier(0.1, 0, 0.1, 1);
            filter: blur(40px);
        }

        /* --- INTRO --- */
        #intro {
            position: fixed; inset: 0; background: #000; 
            display: flex; justify-content: center; align-items: center; z-index: 2000;
            transition: 1s ease-in-out; cursor: pointer;
        }
        .karma-img { width: 220px; animation: logoFloat 3s infinite ease-in-out; }
        @keyframes logoFloat { 0%, 100% { transform: translateY(0); opacity: 0.6; } 50% { transform: translateY(-10px); opacity: 1; } }

        /* --- ANA İÇERİK --- */
        main { position: relative; z-index: 10; padding: 25px; max-width: 500px; margin: 0 auto; opacity: 0; transition: 1.5s ease; }

        .profile-section { text-align: center; margin-top: 20px; }
        .pp-container {
            width: 140px; height: 140px; border-radius: 50%; margin: 0 auto 20px;
            border: 2px solid rgba(255, 255, 255, 0.1); overflow: hidden;
            transition: 0.5s;
        }
        .pp-container img { width: 100%; height: 100%; object-fit: cover; filter: grayscale(1); transition: 0.5s; }
        
        /* İÇİ BOŞ ŞIK BAŞLIK */
        .shn-name { 
            font-size: 2rem; font-weight: 700; letter-spacing: -1px; font-family: 'Syncopate';
            color: transparent; -webkit-text-stroke: 1px rgba(255, 255, 255, 0.2);
            transition: 0.5s;
        }

        .info-card {
            background: rgba(255, 255, 255, 0.02); border: 1px solid rgba(255, 255, 255, 0.05);
            border-radius: 20px; padding: 20px; margin: 25px 0; text-align: left;
        }
        .info-item { margin-bottom: 10px; font-size: 0.75rem; border-bottom: 1px solid rgba(255,255,255,0.03); padding-bottom: 8px; color: #666; }
        .info-label { color: #444; font-family: 'Space Mono'; font-weight: bold; width: 90px; display: inline-block; transition: 0.5s; }

        /* IŞIK ALTI EFEKTLERİ */
        .glow-active .shn-name { -webkit-text-stroke: 1px var(--shn-pink); text-shadow: 0 0 15px var(--shn-pink); }
        .glow-active .info-label { color: var(--shn-pink); }

        .section-title { font-family: 'Space Mono'; font-size: 0.7rem; color: #444; text-transform: uppercase; letter-spacing: 4px; margin: 35px 0 15px 0; display: flex; align-items: center; gap: 10px; }
        .section-title::after { content: ""; flex: 1; height: 1px; background: #111; }

        #age-timer { font-family: 'Space Mono'; font-size: 1.4rem; font-weight: 700; color: #333; transition: 0.5s; }

        /* KOLEKSİYON VE ALBÜMLER */
        .photo-grid { display: grid; grid-template-columns: repeat(3, 1fr); gap: 10px; }
        .photo-slot { aspect-ratio: 1; background: #080808; border-radius: 12px; overflow: hidden; border: 1px solid #111; display: none; }
        .photo-slot img { width: 100%; height: 100%; object-fit: cover; filter: grayscale(1); opacity: 0.4; transition: 0.6s; }

        .album-grid { display: grid; grid-template-columns: 1fr 1fr; gap: 12px; }
        .album-card { background: #050505; border-radius: 15px; overflow: hidden; border: 1px solid #111; text-decoration: none; transition: 0.4s; }
        .album-img { width: 100%; aspect-ratio: 1; overflow: hidden; }
        .album-img img { width: 100%; height: 100%; object-fit: cover; filter: grayscale(1); opacity: 0.4; transition: 0.6s; }
        .album-name { padding: 12px; font-size: 0.8rem; font-weight: 700; color: #333; transition: 0.5s; }

        .social-btns { display: grid; grid-template-columns: 1fr 1fr; gap: 10px; margin-top: 30px; }
        .btn { padding: 16px; border-radius: 15px; text-align: center; font-size: 0.8rem; font-weight: 700; text-decoration: none; border: 1px solid #111; color: #444; transition: 0.4s; }
        
        .sig { margin-top: 60px; text-align: center; font-size: 0.65rem; color: #222; font-family: 'Space Mono'; }
        .sig a { color: inherit; text-decoration: none; }
    </style>
</head>
<body>

    <audio id="myBeat" src="beat.mp3" loop></audio>
    <div id="dynamic-glow"></div>

    <div id="intro" onclick="reveal()">
        <div class="karma-container">
            <img src="karma.png" class="karma-img" alt="KARMA">
            <div style="margin-top:20px; font-family:'Space Mono'; font-size:0.6rem; letter-spacing:5px; color:#444;">TAP TO START</div>
        </div>
    </div>

    <main id="main">
        <div class="profile-section" id="target-header">
            <div class="pp-container" id="target-pp"><img src="sehinsah.jpg" alt="SHN"></div>
            <h1 class="shn-name">UFUK YIKILMAZ</h1>
            
            <div class="info-card">
                <div class="info-item"><span class="info-label">AKA</span> HSNSBBH / ŞEHİNŞAH</div>
                <div class="info-item"><span class="info-label">DOĞUM</span> 27.12.1986 (Kemah, Erzincan)</div>
                <div class="info-item"><span class="info-label">TARZ</span> Hip hop, Trap, Baile Funk</div>
                <div class="info-item"><span class="info-label">LABEL</span> Karma Company</div>
            </div>
        </div>

        <div class="section-title">Genetic Cycle</div>
        <div style="text-align: center; padding: 10px;"><div id="age-timer">00.00000000</div></div>

        <div class="section-title">Collection Data</div>
        <div class="photo-grid" id="photo-grid"></div>

        <div class="section-title">Discography</div>
        <div class="album-grid" id="album-grid">
            <a href="https://open.spotify.com/album/1xNzac76pyGW65UbQ15Jpn?si=SXYm90pgRDaFlPTY41YucA" target="_blank" class="album-card">
                <div class="album-img"><img src="6ep.jpg"></div>
                <div class="album-name">6EP</div>
            </a>
            <a href="https://open.spotify.com/album/1zkZPiKRqqVJPKIqap3SU8?si=kK3mFMXbSSmmwWDCJx0bAw" target="_blank" class="album-card">
                <div class="album-img"><img src="ikarus.jpg"></div>
                <div class="album-name">IKARUS</div>
            </a>
            <a href="https://open.spotify.com/album/5wDw71G6My66IurTcLbULV?si=OW6vcMAIR7up82COdhEkeA" target="_blank" class="album-card">
                <div class="album-img"><img src="dss.jpg"></div>
                <div class="album-name">DSS</div>
            </a>
            <a href="https://open.spotify.com/album/6cWS5yrVFflrNt7o7eWgqx?si=rjootJ2_TKmCGQRkaDdSpg" target="_blank" class="album-card">
                <div class="album-img"><img src="666.jpg"></div>
                <div class="album-name">666</div>
            </a>
        </div>

        <div class="social-btns">
            <a href="https://open.spotify.com/intl-tr/artist/0FUsrstJwmg4WVHQMTYuUA" target="_blank" class="btn" id="btn-spot">SPOTIFY</a>
            <a href="https://www.instagram.com/sehinsah/" target="_blank" class="btn" id="btn-insta">INSTAGRAM</a>
        </div>

        <div class="sig">
            <a href="https://www.instagram.com/on_r19/" target="_blank">ONUR TERYAKİOĞLU</a>
        </div>
    </main>

    <script>
        const bday = new Date('1986-12-27T00:00:00');
        const exts = ['jpg', 'png', 'webp', 'jpeg'];
        let found = 0;

        window.addEventListener('scroll', () => {
            const glow = document.getElementById('dynamic-glow');
            const scrollPos = window.scrollY;
            const center = window.innerHeight / 2;
            glow.style.top = center + scrollPos + 'px';

            // Elementlerin Işığa Tepki Vermesi
            document.querySelectorAll('img, .shn-name, .info-label, #age-timer, .album-name, .btn').forEach(el => {
                const rect = el.getBoundingClientRect();
                const elCenter = rect.top + (rect.height / 2);
                const dist = Math.abs(elCenter - center);

                if (dist < 150) {
                    if(el.tagName === 'IMG') { el.style.filter = "grayscale(0)"; el.style.opacity = "1"; }
                    if(el.classList.contains('shn-name')) { el.style.color = "var(--shn-pink)"; el.style.webkitTextStroke = "1px var(--shn-pink)"; el.style.textShadow = "0 0 20px var(--shn-pink)"; }
                    if(el.classList.contains('info-label')) { el.style.color = "var(--shn-pink)"; }
                    if(el.id === 'age-timer') { el.style.color = "var(--shn-pink)"; }
                    if(el.classList.contains('album-name')) { el.style.color = "#fff"; }
                    if(el.classList.contains('btn')) { el.style.borderColor = "var(--shn-pink)"; el.style.color = "var(--shn-pink)"; }
                } else {
                    if(el.tagName === 'IMG') { el.style.filter = "grayscale(1)"; el.style.opacity = "0.4"; }
                    if(el.classList.contains('shn-name')) { el.style.color = "transparent"; el.style.webkitTextStroke = "1px rgba(255,255,255,0.2)"; el.style.textShadow = "none"; }
                    if(el.classList.contains('info-label')) { el.style.color = "#444"; }
                    if(el.id === 'age-timer') { el.style.color = "#333"; }
                    if(el.classList.contains('album-name')) { el.style.color = "#333"; }
                    if(el.classList.contains('btn')) { el.style.borderColor = "#111"; el.style.color = "#444"; }
                }
            });
        });

        function init() {
            setInterval(() => {
                const age = (new Date() - bday) / (1000 * 60 * 60 * 24 * 365.25);
                document.getElementById('age-timer').innerText = age.toFixed(9);
            }, 100);
            scanImages();
        }

        function scanImages() {
            for (let i = 1; i <= 15; i++) { checkExt(i, 0); }
        }

        function checkExt(idx, eIdx) {
            if (eIdx >= exts.length) return;
            const img = new Image();
            img.src = `${idx}.${exts[eIdx]}`;
            img.onload = () => {
                const slot = document.createElement('div');
                slot.className = 'photo-slot';
                slot.style.display = 'block';
                slot.appendChild(img);
                document.getElementById('photo-grid').appendChild(slot);
            };
            img.onerror = () => checkExt(idx, eIdx + 1);
        }

        function reveal() {
            document.getElementById('myBeat').play();
            document.getElementById('intro').style.opacity = '0';
            setTimeout(() => {
                document.getElementById('intro').style.display = 'none';
                document.getElementById('main').style.opacity = '1';
                window.scrollTo(0,1); // Işığı tetiklemek için minik bir scroll
            }, 600);
        }

        window.onload = init;
    </script>
</body>
</html>
